doctype html
html(lang='ru')
	head
		title att_edit_device

		include ./partials/head.jade

	body

		include ./partials/noscript.jade
		include ./partials/header.jade
		
		section.att-new
			.container.content
				h2.back Edit Device
					a.back-arr(href="")
					a(href="#").info
				.add-body
					.inline-layout.col-2
						.form-groups
							.form-group
								label(for="").important Device Serial No
								input(type="text")
							.form-group
								label(for="").important Name
								input(type="text")
							.form-group
								label(for="") Description
								textarea#text2
						.img-upload
							label(for="") Asset Image
							.image-holder
							.form-group.inline-layout
								.fake-input
									span File...
									input(type="file", placeholder="file..")
								a(href="#") Upload image
								a(href="#").close
				.add-body
					.radios
						h5 Asset Plan
						ul.inline-layout
							li
								.radio
									input#che1(type="radio", name="radio1")
									label(for="che1") Do Nothing
							li
								.radio
									input#che2(type="radio", name="radio1")
									label(for="che2") Stay in Fance
							li
								.radio
									input#che3(type="radio", name="radio1")
									label(for="che3") Don`t Move
							li
								.radio
									input#che4(type="radio", name="radio1")
									label(for="che4") Track History
					.coords
						ul.inline-layout
							li
								label(for="") Latitude
								input#lat.coordsInput(type="number")
							li
								label(for="") Longitude
								input#lng.coordsInput(type="number")
							li
								label(for="") Radius(m)
								input#radius.coordsInput(type="number")
							li.position
								a(href="#") Current  Device Position
								

		section.statistics.cust
			.container.content
				.statistics-holder
					.st-item
						.map-holder
							#map

		section.att-new.w-map
			.container.content
				.advan-sett
					a(href="#").sett-btn#sett-btn Advanced Settings

					p.warning We recommend leave these settings untouched if you are not confident
					.sett-container#sett-container
						.lists.inline-layout.col-2
							.left-set
								ul
									li
										.form-group
											label(for="") Delay before applying plan change 
												span  (minutes) 
											input(type="text")
									li
										.form-group
											label(for="") Connection frequency 
												span  (minutes) 
											input(type="text")
							.right-set
								ul
									li
										.form-group
											label(for="") Modem in non-connected state
											.select-holder
												select#del34(name="der")
													option(value="1") Power-saving
													option(value="2") Power-saving
													option(value="3") Power-saving
													option(value="4") Power-saving
									li
										.form-group
											label(for="") Allow cellular positioning
											.select-holder
												select#del34(name="der")
													option(value="1") Yes
													option(value="2") No
									li
										.form-group
											label(for="") Allow “normal” SMS from device
											.select-holder
												select#del34(name="der")
													option(value="1") Yes
													option(value="2") No
					.btns
						a(href="#").addbtn Save


								



								


		include ./partials/footer.jade
		include ./partials/gmaps.jade
		include ./partials/scripts.jade
		include ./partials/maps-position.jade

